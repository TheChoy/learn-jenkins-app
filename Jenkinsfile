pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = '0431bf5e-5008-40b5-be82-408babc78afb'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "üîß Checking required files..."
                sh '''
                    test -f index.html || (echo "‚ùå Missing index.html" && exit 1)
                    test -f netlify/functions/quote.js || (echo "‚ùå Missing quote function" && exit 1)
                    echo "‚úÖ Build check passed."
                '''
            }
        }

        stage('Code Linting') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "üîç Running ESLint for code quality check..."
                script {
                    def lintStatus = sh(
                        script: '''
                            npm install eslint
                            npx eslint . || echo "‚ùå Linting errors found!"
                        ''',
                        returnStatus: true
                    )
                    if (lintStatus != 0) {
                        echo "‚ö†Ô∏è Linting completed with errors, but continuing pipeline."
                    } else {
                        echo "‚úÖ Code linting passed."
                    }
                }
            }
        }

        stage('Security Scan') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "üîí Running security scan with npm audit..."
                script {
                    def auditStatus = sh(
                        script: '''
                            npm install
                            npm audit --production || echo "‚ùå Security vulnerabilities found!"
                        ''',
                        returnStatus: true
                    )
                    if (auditStatus != 0) {
                        echo "‚ö†Ô∏è Security scan completed with vulnerabilities, but continuing pipeline."
                    } else {
                        echo "‚úÖ Security scan passed."
                    }
                }
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "üß™ Testing quote function load..."
                sh '''
                    node -e "require('./netlify/functions/quote.js'); console.log('‚úÖ Function loaded successfully')"
                '''
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "üöÄ Deploying to Netlify..."
                sh '''
                    npm install netlify-cli
                    node_modules/.bin/netlify deploy \
                      --auth=$NETLIFY_AUTH_TOKEN \
                      --site=$NETLIFY_SITE_ID \
                      --dir=. \
                      --prod
                '''
            }
        }

        stage('Post Deploy') {
            steps {
                echo "‚úÖ Deployment complete! Your app is live."
            }
        }
    }

    post {
        success {
            echo "üéâ CI/CD pipeline finished successfully."
        }
        failure {
            echo "‚ùå Pipeline failed. Check logs for details."
        }
    }
}